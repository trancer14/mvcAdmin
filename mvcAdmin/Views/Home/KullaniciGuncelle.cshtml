@model mvcAdmin.Models.musteriler
@{
    ViewBag.Title = "KisiGuncelle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="single-pro-review-area mt-t-30 mg-b-15">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="product-payment-inner-st">
                    <ul id="myTabContent" class="tab-review-design">
                        <li class="active"><a href="#reviews">Kullanıcı Bilgileri Güncelle</a></li>

                    </ul>
                    <form action="/Home/KullaniciGuncelle" method="post">
                        <div>

                            <input type="hidden" name="musteriid" value="@Model.musteriid" />
                            <div class="product-tab-list  " id="reviews">
                                <div class="row">
                                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                        <div class="review-content-section">
                                            <div class="row">
                                                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                                    <div class="devit-card-custom">
                                                        <div class="form-group">
                                                            <input type="text" class="form-control" placeholder="Müşteri Adı" name="musteriad" value="@Model.musteriad">
                                                        </div>
                                                        <div class="form-group">
                                                            <input type="text" class="form-control" name="musterisoyad" placeholder="Müşteri Soyadı" value="@Model.musterisoyad">
                                                        </div>
                                                        <div class="form-group">
                                                            <input type="text" class="form-control" name="musterisehir" placeholder="Müşteri 
                                                                   Şehir" value="@Model.musterisehir">
                                                        </div>
                                                        <div class="form-group">
                                                            <input type="text" class="form-control" name="musteritc" placeholder="TC NO" value="@Model.musteritc">
                                                        </div>
                                                        <div class="form-group">
                                                            <input type="text" class="form-control" name="musteritelefon" placeholder="Telefon No" value="@Model.musteritelefon">
                                                        </div>
                                                        <input type="submit" class="btn btn-primary waves-effect waves-light" value="Güncelle" />

                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>


                        </div>
                    </form>
                </div>
                </div>
            </div>
        </div>
    </div>

